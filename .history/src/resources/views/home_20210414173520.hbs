<div class="mt-4">
  <div class="row">
    <div class="col-sm-6 col-lg-4">
      {{#each courses}}
      <div class="card"">
        <img class=" card-img-top" src="{{courses.image}}" alt="{{courses.name}}">
        <div class="card-body">
          <h5 class="card-title">{{courses.name}}</h5>
          <p class="card-text">{{courses.description}}</p>
          <a href="#" class="btn btn-primary">Mua khóa học</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>